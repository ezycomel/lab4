    // Display the required details in the console
    console.log("Title of the first book:", bookCollection.books[0].title);
    console.log("Author of the second book:", bookCollection.books[1].author);
    console.log("Genres of all books:");
    bookCollection.books.forEach((book, index) => {
      console.log(`Book ${index + 1} genres:`, book.genres.join(", "));
